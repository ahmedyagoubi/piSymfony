{% extends 'base.html.twig' %}
{% block body %}
<div id="contact" class="container">
    <div class="row"> </div>
    <div class="row">
        <div class="col-lg-12">
            <nav aria-label="breadcrumb" class="d-flex justify-content-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('evenement_index') }}">Event</a></li>
                    <li aria-current="page" class="breadcrumb-item active">Add Guide</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row text-center mb-5">
        <div class="col-lg-12">
            <div class="heading">
                <h2>Add Guide</h2>
            </div>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstname">Tel Number</label>
                            <input name="tel" class="form-control" placeholder="" type="number"
                                   >
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="lastname">Mail</label>
                            <input name="mail" class="form-control" placeholder="" type="text"
                                   >

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input name="prenom" class="form-control" placeholder="" type="text"
                                   >

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="subject">Name</label>
                            <input name="nom" class="form-control" placeholder="" type="text"
                                   >

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="subject">Event type</label>
                            <input type="text" required class="form-control" placeholder=""
                                   value="{{ event.type }}" disabled
                                   name="eventType">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="subject">Event Name</label>
                            <input type="text" required class="form-control" placeholder=""
                                   value="{{ event.nomEvenement }}" disabled
                                   name="nomEvenement">
                        </div>
                    </div>


                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-outline-primary"><i class="fa fa-check"></i> Add Guide</button>
                    </div>
                </div>
                <!-- /.row-->
            </form>
        </div>
    </div>
    <!-- /.row-->
</div>

{% endblock %}