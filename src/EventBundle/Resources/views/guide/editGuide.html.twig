{% extends 'base.html.twig' %}
{% block body %}
<!-- /.navbar-->
<div id="contact" class="container">
    <div class="row"> </div>
    <div class="row">
        <div class="col-lg-12">
            <nav aria-label="breadcrumb" class="d-flex justify-content-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('evenement_index') }}">Event</a></li>
                    <li aria-current="page" class="breadcrumb-item active">Edit Guide</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row text-center mb-5">
        <div class="col-lg-12">
            <div class="heading">
                <h2>Edit Guide</h2>
            </div>
        </div>
        <div class="col-lg-8 mx-auto">

            <form method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstname">Tel Number</label>
                            <input name="tel" class="form-control" placeholder="" type="number"
                                   value="{{ guide.tel }}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="lastname">Mail</label>
                            <input name="mail" class="form-control" placeholder="" type="text"
                                   value="{{ guide.mail }}">

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input name="prenom" class="form-control" placeholder="" type="text"
                                   value="{{ guide.prenom }}">

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="subject">Name</label>
                            <input name="nom" class="form-control" placeholder="" type="text"
                                   value="{{ guide.nom }}">

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="message">event type</label>
                            <select class="form-control" name="evenement" required>
                                <optgroup label="{{ guide.eventType }}">
                                    {% for e in events %}
                                        <option value="{{ e.id }}">{{ e.nomEvenement }}</option>
                                    {% endfor %}
                                </optgroup>

                            </select>
                        </div>
                    </div>
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-outline-primary"><i class="fa fa-check"></i> Edit Guide</button>
                    </div>
                </div>
                <!-- /.row-->
            </form>

        </div>
    </div>
    <!-- /.row-->
</div>

{% endblock %}