{% trans_default_domain 'FOSUserBundle' %}
<style>
    .form-group label {
        font-weight: bold;
        color: black;
    }
    .bg {
        background-image: url('{{ asset('assets/img/slider2.jpg') }}');
        background-size: 100% 100%;
        height:100vh;
    }
    html, body {
         height: 100%;
     }
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

<script>
    $(function(){
        $('#fos_user_registration_form_categorie').parent().css('display', 'none');
        $('#fos_user_registration_form_type').parent().css('display', 'none');
    });
</script>
<div class="row">

    <div class="col-md-8 bg">
    </div>

    <div class="full-height col-md-4">
        {% form_theme form 'bootstrap_3_layout.html.twig' %}

        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        {{ form_row(form.username) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.email) }}
        {{ form_row(form.addresse) }}
        {{ form_row(form.telephone) }}
        {{ form_row(form.plainPassword) }}
        {{ form_row(form.plainPassword) }}
        {{ form_row(form.imageFile) }}
        <div>
            <input type="submit" value="{{ 'registration.submit'|trans }}"/>
        </div>
        {{ form_end(form) }}

    </div>
</div>
</body>